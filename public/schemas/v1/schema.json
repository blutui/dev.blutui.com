{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "Configuration",
  "description": "The configuration that is contained inside the file `courier.json`",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "A field for the [JSON schema](https://json-schema.org) specification",
      "type": ["string", "null"]
    },
    "api": {
      "description": "The API URL used to update this project",
      "type": ["string", "null"]
    },
    "handle": {
      "description": "The handle for this project",
      "type": ["string", "null"]
    },
    "site": {
      "description": "The subdomain of this project",
      "type": ["string", "null"],
      "deprecated": true
    },
    "cassette": {
      "description": "The handle for this Cassette",
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false,
  "required": ["handle"]
}
